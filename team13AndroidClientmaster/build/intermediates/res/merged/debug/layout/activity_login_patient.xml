<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.openmrs.mobile.activities.LoginPatient">

    <ImageView
        android:id="@+id/openmrsLogo2"
        android:background="@drawable/openmrs_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idt"
        android:text="Enter patient UUID"
        android:layout_below="@+id/openmrsLogo2"
        android:textSize="20dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idt"
        android:id="@+id/uuid"
        android:layout_centerHorizontal="true"
        android:text="example: dd73d468-1691-11df-97a5-7038c432aabf"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editsub"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/uuid"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mBtn_existing_patient"
        android:background="@drawable/ripple_effect_menu"
        android:textColor="@color/white"
        android:layout_below="@+id/editsub"
        android:text="SUBMIT"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mBtn_existing_patient"
        android:layout_marginTop="20dp"
        android:text="  By clicking on the submit button without the patient uuid you'll be logged in as a guest user."
        android:id="@+id/textView3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/mBtn_register_patient"
        android:textColor="@color/white"
        android:text="REGISTER NEW PATIENT"
        android:background="@drawable/ripple_effect_menu"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
